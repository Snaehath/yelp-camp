<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form method="post" action="/campgrounds/<%= foundCampground._id %>?_method=PUT" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Enter Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%= foundCampground.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Enter Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= foundCampground.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" aria-label="Amount (to the nearest dollar)" value="<%= foundCampground.price %>" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= foundCampground.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label"> Add images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% foundCampground.images.forEach((img,i) =>{ %>
                        <img src="<%=img.thumbnail %>" alt="" class='img-thumbnail'>
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete ?</label>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Save Campground</button>
                </div>
                <a href="/campgrounds/<%= foundCampground._id %>">Back to campgrounds</a>
        </div>
    </div>